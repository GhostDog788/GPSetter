<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_set_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Location"
        app:layout_constraintBottom_toTopOf="@+id/btn_reset_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btn_reset_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_set_location" />

    <EditText
        android:id="@+id/et_north"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="31.7683"
        app:layout_constraintBottom_toTopOf="@+id/et_east"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/et_east"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=" 35.2137"
        app:layout_constraintBottom_toTopOf="@+id/btn_set_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_north"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N:"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_north"
        app:layout_constraintEnd_toStartOf="@+id/et_north"
        app:layout_constraintTop_toTopOf="@+id/et_north" />

    <TextView
        android:id="@+id/tv_east"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E:"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/et_east"
        app:layout_constraintEnd_toStartOf="@+id/et_east"
        app:layout_constraintTop_toTopOf="@+id/et_east" />

    <Button
        android:id="@+id/btn_print_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Print Location"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_reset_location" />

</androidx.constraintlayout.widget.ConstraintLayout>